{
  "version": 2,
  "builds": [
    {
      "src": "apps/api/src/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "apps/web/next.config.ts",
      "use": "@vercel/next",
      "config": {
        "outputDirectory": "apps/web/.next"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "apps/api/src/index.ts" },
    { "src": "/(.*)", "dest": "apps/web/$1" }
  ]
}
